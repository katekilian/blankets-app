<% if @blanket.errors.any? %>
  <ul>
    <% @blanket.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @blanket do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :color %>
  <%= f.text_field :color %>
  <br>
  <%= f.label :fabric %>
  <%= f.text_field :fabric %>
  <br>
  <%= f.label :weight %>
  <%= f.text_field :weight %>
  <br>
  <%= f.submit name_of_button %>

<% end %>
